#header
  height: banner-height
  position: relative
  border-bottom: 1px solid color-border
  background-image url("/assets/img/home/Bitponics_Hssld_H4D_0158.jpg")
  background-position: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
  &:before
      height: 3em
      background: white
  // &:after
  //   bottom: 0
  //   background: linear-gradient(transparent, rgba(0, 0, 0, 0.2))

#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  // overflow: hidden

#banner
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  // background: url(banner-url) center #000
  background-size: cover
  z-index: -1

#header-title
  text-align: center;
  height: auto;
  position: absolute;
  top: 33%;
  left: 0;
  margin-top: logo-size * -0.5

$logo-text
  text-decoration: none
  // color: #fff
  // font-weight: 300
  // text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)


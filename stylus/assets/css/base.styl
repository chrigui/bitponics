.data-module {
  color white
  text-align center
  position relative
  background-color color-logo-green
  //width 100%
  height 6em
  text-transform uppercase
  margin 0.125em 0
  transition-property: background-color;
  transition-duration: .5s;

  div, p, span, a, a:visited, a:hover, a:active {
    color white
  }

  &.empty {
    background-color darken(color-bg-light-green, 15%)
  }
  
  &.warning, 
  &.remove {
    background-color color-bg-orange
  }


  .main-heading, .message, .settings, .sensor-value-unit, .sensor-type {
    position absolute
  }

  .main-heading {
    color white
    font-size .75em
    margin 0
    top .5em
    left .75em
    font-weight bold
  }
  .message {
    bottom .5em
    right .75em
  }
  .settings {
    top .15em
    right .5em
  }
  .message, .sensor-value-unit {
    font-size .55em //~10px
    font-weight bold
  }
  .sensor-value-unit {
    top 1em
    right 1.85em
    line-height 1em
    text-align left

    span {
      display block
    }
  }
  .sensor-data {
    display inline-block
    vertical-align middle
    position: absolute;
    top 1.85em
    left 0
    width 100%
    // border-top 1px solid white
  }
  .sensor-value {
    font-size 10em
    // letter-spacing -.1em
    line-height 1.25em
    margin -.15em 0 0 -.15em
    text-align center
    
  }
  .sensor-type {
    // bottom: .25em;
    // left: .5em;
    top .25em
    right .5em
  }

  &.closed { //TODO: work on closed state
    min-height 2em
    height auto

    .main-heading {
      position static
      display inline-block
      vertical-align middle
      width 63%
      text-align left
      text-indent .45em
    }
    .sensor-value-unit, .message, .settings, .sensor-type {
      display none
    }
    .sensor-data {
      width 30%
      text-align right
      position relative
      right .25em
      top 0
      border none 0
      
    }
    .sensor-value {
      font-size .75em
      position static
      letter-spacing normal
      margin 0
      position relative
      right 0.15em
      text-align right
      font-weight bold  
    }


  }

  &:before {
      content ''
      display inline-block
      height 100%
      vertical-align middle
      margin-right -0.25em
  }
}


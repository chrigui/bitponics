@import "helpers"
@import "./global/breakpoints"

@media $mq_large

  .landing-page

    .main, .header
      padding 0

    .header
      & > header
        margin: 0 auto;
        max-width: 60em;

      li
        &.first
          width: 19.3%;
          margin: 0 .5% 0 0;

      .elevated-item, .social-icons
        position absolute
        top 0
        right 0

      .elevated-item
        text-align left
        width 15%
        margin 0
        right 15%

      .social-icons
        width 16%
        overflow hidden
        margin 0

      .headline
        margin-right 26%


  .landing-page.getstarted
    .preorder-price
      margin .5em

    .retail-price, .preorder-price
      .additional-text
        display inline-block
        span
          width 100%

  /*
   * Team Page Overrides
   */
  .member
    clear both
    margin 0 0 1em 0

    h3
      border-bottom 1px solid white
      float right
      width 50%
    img
      float left
      width 40%
      margin: 1.5em 10% 15em 0
      border: 4px solid white;

    p
      float right
      width 50%

  /*
   * App Page Overrides
   */
  .header > header
    width 95%

  .question
    width 30%

  .question-wrap-right
    float right
    width 65%





  .landing-page.buy

    form
      
      p
        margin 0
        width auto
        max-width 100%
        input
          width auto
          max-width 100%

      label[for="locality"],
      label[for="region"]
        display block
        visibility hidden


    /*
     * General order-info styles
     * order-info element can layout vert or horiz via: 
     *    .order-info-horizontal or .order-info-vertical
     */
    .order-info
      @extends .display-ib

      & > div
        //

      .link
        text-decoration underline

      .bitponics-device
        //

      .quantity-layout
        //
      
      .web-service-layout
        label
          clear both

    .order-info-horizontal
      .order-info
        padding 0 1em

        .bitponics-device,
        .quantity-layout
          float left
          width 33%

        .web-service-layout
          float right
          width 30%

        .bitponics-device
          img
            width 90%

        .total-price
          position static


    .order-info-vertical
      position relative

      .sub-heading, 
      .personal-info,
      .creditcard-info,
      .shipping-info,
      .account-info
        float left
        width 70%
        padding-left 1em

      .sub-heading
        padding-left 1em
        margin-top 0

        &.right
          float right
          width 70%

      p.sub-heading
        padding-left 1.25em

      .order-info
        float left
        width 30%
        min-width 13em
        margin 0 0 2.5em 0


        .bitponics-device
          img
            margin-bottom 0
            width 100%

      .creditcard-info, .account-info
        @extends .float-l




    .personal-info, .shipping-info
      @extends .float-l
      
      p, .name-group, .address-group
        @extends .float-l

      .address-group
        min-width 23em


      p.city-group
        label[for="locality"],
        label[for="region"]
          visibility hidden

      p.postal-code-group
        @extends .half-width
        @extends .clear-r

        input
          @extends .half-width

      p.country-group
        margin 0 0 1em

    .creditcard-info
      @extends .float-l

      p
        @extends .float-l

      p.cardnumber-group
        @extends .float-l

      p.cvv-group
        @extends .fifth-width
        @extends .float-l

      p.expiration-group
        @extends .float-l

        input
          @extends .float-l
    
    .shipping-info
      @extends .float-l

      .custom-checkbox-wrap p
        width 100%
      


    .account-info
      p.email-group
        @extends .float-l

      p.password-group
        @extends .float-l

  .app-page
    .header > header
      width 95%

@media $mq_larger
  .page-content-inner-wrapper
    width: 84%;
    float: right;

  #how-it-works #details .detail-block
    width 40%
    float left

    img 
      float left 
      margin-right 1em

    p
      float none

  #pricing
    .center
      width 85%

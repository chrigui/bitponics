//Pricing Page
#pricing 
  &.content-module
    min-height auto // TEMP while we are only showing dev-status messaging
    height auto

  .page-heading
    margin-bottom 0

  .development-status // TEMP while we're only showing dev-status messaging
    color color-logo-green
    font-size: 1.5em
    margin-bottom 0

  
  .btn
    color: color-logo-green
    border-color: color-logo-green

  .base-station-preorder
    .btn
      margin-left 0


  h2.price-category
    color color-logo-green
    line-height 2em
    margin-top 0
    margin-bottom 1em

    &.first 
      margin 0
      border-top none


  .price
    padding-left 1em

    &.base-station-price 
      display block
      margin 0 auto
      span

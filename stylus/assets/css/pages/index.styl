@import "nib"
@import "./global/colors"

.headline
  position absolute
  top: 0;
  left: 0;
  color: white;
  background: rgba(0,0,0,.25);
  margin: 0;
  width: 100%;
  min-height: 100%;
  //padding: .5em;
  padding: 1em 4em;
  font-size: 1em;
  z-index 1

.headline-about
  //@extends .headline
  position static
  font-size 4em
  margin .5em 0 .45em 0
  line-height 1em


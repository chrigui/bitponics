.featured-press,
.additional-press
  // padding 0 1em
  margin 1.5em 0
  a
    @extends .display-ib

.featured-press
  li, p
    color-text-gray2

.additional-press
  a
    width 100%
  .last
    a
      width auto



.elevated-item
  // position absolute
  // top 0
  // right 0

  li
    margin 0
    padding 0

  .btn
    padding .5em
    margin 0 0 0 -.5em
    background white
    border 2px solid color-text-gray

.social-icons
  position relative
  top -.4em
  right 0
  
  li
    @extends .circle;
    cursor pointer
    width 2em
    height 2em
    padding .5em 0
    margin 0 0  0 .25em
    background color-text-gray
    color white
    position relative
    float left
    text-align right

    div
      @extends .hide-text;
      text-indent 100%
    
    a, i
      // font-size 1.1em

    i
      position: absolute;
      width: 70%!important;
      height: 75%!important;
      top: 50%!important;
      -webkit-transform: translateY(-50%) translateX(-50%);
      transform: translateY(-50%) translateX(-50%);
      left: 50%!important;

    i.icon-__51_facebook_white
